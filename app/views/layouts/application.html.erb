<!DOCTYPE html>
<html>
  <head>
    <title><%= @title == nil ? 'Automotive Customer Finders' : @title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'https://js.stripe.com/v3/', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <%= render 'layouts/header'%>
    <% if current_page?(home_path)|| current_page?(root_path)%>
    <%= render 'layouts/carousel'%>
    <% end %>
      <div class='container' style='margin-top:50px;'>
        <% flash.each do |key, msg| %>
          <%= content_tag :div, msg, class: "flash #{key}" %>
        <% end %>

        <%= yield %>
      </div>
      <%= render 'layouts/footer'%>
  </body>
</html>
